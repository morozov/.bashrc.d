# Set the full bash prompt.
function set_bash_prompt () {

    local EXIT="$?"
    local PROMPT=""

    BRANCH=''
    XDEBUG=''

    # Check if git prompt snippet is loaded
    if type is_git_repository > /dev/null 2>&1; then
        # Set the BRANCH variable.
        if is_git_repository ; then
            set_git_branch
        else
            BRANCH=''
        fi
    fi

    if [ $EXIT != 0 ]; then
        PROMPT_COLOR="${LIGHT_RED}"
    else
        PROMPT_COLOR="${LIGHT_YELLOW}"
    fi

    [ -z $XDEBUG_CONFIG ] || XDEBUG="${YELLOW} ☢ ${COLOR_NONE}"

    # Set the bash prompt variable.
    PS1="\u@\[\033[1m\]\[\033[34m\]\h:\[\033[00m\]\w$BRANCH${XDEBUG}\n${PROMPT_COLOR}↪ ${COLOR_NONE} "
}

# Tell bash to execute this function just before displaying its prompt.
PROMPT_COMMAND=set_bash_prompt
