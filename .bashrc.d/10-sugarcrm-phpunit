function sugar_phpunit() {
    if [ -e ../vendor/bin/phpunit ]
    then
        PHPUNIT="php ../vendor/bin/phpunit"
    else
        PHPUNIT="phpunit"
    fi
    DATETIME=$(date +"%Y%m%d-%H%M%S")
    $PHPUNIT --colors --testdox-text "/tmp/phpunit-$DATETIME.log" -d memory_limit=-1 "$@"
}

alias phpunit='sugar_phpunit'

export -f sugar_phpunit
